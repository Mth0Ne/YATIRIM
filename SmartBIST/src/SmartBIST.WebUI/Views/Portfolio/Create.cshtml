@model SmartBIST.Application.DTOs.PortfolioDto
@{
    ViewData["Title"] = "Yeni Portföy Oluştur";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Yeni Portföy Oluştur</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Portföy Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Ana Portföyüm, BIST30 Portföyü..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Portföyünüz hakkında kısa bir açıklama..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">Aktif Portföy</label>
                            </div>
                            <small class="text-muted">Aktif portföyler performans takibinde ve raporlamada gösterilir.</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="InvestmentStrategy" class="form-label">Yatırım Stratejisi</label>
                            <select asp-for="InvestmentStrategy" class="form-select">
                                <option value="Değer Yatırımı">Değer Yatırımı</option>
                                <option value="Büyüme Odaklı">Büyüme Odaklı</option>
                                <option value="Temettü">Temettü Odaklı</option>
                                <option value="Endeks">Endeks Takibi</option>
                                <option value="Karma">Karma Strateji</option>
                                <option value="Teknik Analiz">Teknik Analiz</option>
                                <option value="Kısa Vadeli">Kısa Vadeli</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="InvestmentStrategy" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="RiskLevel" class="form-label">Risk Seviyesi</label>
                            <input type="number" asp-for="RiskLevel" class="form-control" value="3" min="1" max="5" />
                            <span asp-validation-for="RiskLevel" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Portföy Tipi</label>
                            <input type="text" asp-for="Type" class="form-control" value="Normal" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CurrencyCode" class="form-label">Para Birimi</label>
                            <select asp-for="CurrencyCode" class="form-select">
                                <option value="TRY" selected>TRY</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="GBP">GBP</option>
                            </select>
                            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Portföyü Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 